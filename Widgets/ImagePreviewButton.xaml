<UserControl x:Class="AnonymDesktopClient.Widgets.ImagePreviewButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnonymDesktopClient.Widgets"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Height="{Binding ButtonSize}" Click="Preview_Click">
            <Image gif:ImageBehavior.AnimatedSource="{Binding PreviewImage}"/>
        </Button>        
    </Grid>
</UserControl>
