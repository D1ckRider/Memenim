<UserControl x:Class="AnonymDesktopClient.Widgets.PostWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnonymDesktopClient.Widgets"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height=".2*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="View Post" Click="ViewPost_Click"></MenuItem>
                <MenuItem Header="Copy Post ID" Click="CopyPostID_Click"></MenuItem>
            </ContextMenu>
        </Grid.ContextMenu>
        <Image Source="{Binding ImageURL}"></Image>
        <TextBlock Grid.Row="1" Text="{Binding PostText}" Foreground="{StaticResource MahApps.Brushes.Text}" TextWrapping="WrapWithOverflow"></TextBlock>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBlock>Shares</TextBlock>
            <TextBlock>Comments</TextBlock>
            <TextBlock>Likes</TextBlock>
            <TextBlock >Dislikes</TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
