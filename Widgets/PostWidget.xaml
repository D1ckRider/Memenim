<UserControl x:Class="AnonymDesktopClient.Widgets.PostWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnonymDesktopClient.Widgets"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderThickness="0" Padding="5">
    <Grid Loaded="Grid_Loaded" VerticalAlignment="Stretch" MouseLeftButtonUp="Post_Click" Background="{StaticResource MahApps.Brushes.Gray10}">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height=".2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="View Post" Click="ViewPost_Click"></MenuItem>
                <MenuItem Header="Copy Post ID" Click="CopyPostID_Click"></MenuItem>
            </ContextMenu>
        </Grid.ContextMenu>
        
        <local:PosterBanner x:Name="wdgPoster" Grid.Row="0" Grid.ColumnSpan="3" Margin="15 15 0 0"/>
        
        
        <TextBlock Grid.Row="1" Grid.ColumnSpan="3" Text="{Binding text}" Foreground="{StaticResource MahApps.Brushes.Text}" Width="400" TextWrapping="Wrap" VerticalAlignment="Top" Margin="15 5 15 5"/>
        <Image Source="{Binding attachments[0].photo.photo_medium}" Grid.Row="2" Stretch="Uniform" Width="400" Grid.ColumnSpan="3" VerticalAlignment="Top" Margin="15 5 15 0"/>

        <DockPanel Grid.Row="3" Grid.ColumnSpan="3" Margin="5">
            <local:StatButton x:Name="stShare" IsEnabled="False" Icon="Share" ButtonSize="28" HorizontalAlignment="Left" />
            <local:StatButton x:Name="stComments" IsEnabled="False"  Icon="Message" ButtonSize="28" HorizontalAlignment="Center"/>
            <local:StatButton x:Name="stLikes" IsEnabled="False" Icon="ThumbsUp" ButtonSize="28" HorizontalAlignment="Right" />
            <local:StatButton x:Name="stDislikes" IsEnabled="False" Icon="ThumbsDown" ButtonSize="28" HorizontalAlignment="Right" />
        </DockPanel>
    </Grid>
    </Border>
</UserControl>
