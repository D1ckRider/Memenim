<UserControl x:Class="AnonymDesktopClient.Core.Widgets.UserProfileStat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnonymDesktopClient.Core.Widgets"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Background="{StaticResource MahApps.Brushes.Gray10}">
            <TextBlock Style="{DynamicResource Header2}" Text="{Binding StatTitle}"/>
            <TextBlock Style="{DynamicResource Paragraph}" Text="{Binding Path=StatValue}"/>
        </StackPanel>   
    </Grid>
</UserControl>
