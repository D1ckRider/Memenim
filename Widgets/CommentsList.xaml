<UserControl x:Class="AnonymDesktopClient.Widgets.CommentsList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnonymDesktopClient.Widgets"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Padding="5" BorderThickness="0">
        <Grid Background="{StaticResource MahApps.Brushes.Gray10}" Loaded="Grid_Loaded">
            <StackPanel>
                <TextBlock Style="{DynamicResource Header2}" Text="{DynamicResource ResourceKey=CommentsTitle}" Margin="16 5 0 0" />
                <Button x:Name="btnLoadMore" Click="btnLoadMore_Click" Margin="16 5 16 5" Content="{DynamicResource ResourceKey=LoadComments}" Style="{StaticResource MahApps.Styles.Button.Square}"/> 
                <WrapPanel Name="lstComments" Orientation="Vertical" Margin="16 5 16 5"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
