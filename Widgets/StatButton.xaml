<UserControl x:Class="Memenim.Widgets.StatButton"
             d:DataContext="{d:DesignInstance local:StatButton}"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:Memenim.Widgets"
             mc:Ignorable="d" 
             d:DesignHeight="48" d:DesignWidth="1000">

    <Border Padding="5">
        <StackPanel Orientation="Horizontal">
            <Button Width="{Binding Path=ButtonSize}" Height="{Binding Path=ButtonSize}" Margin="5" Click="Button_Click" Foreground="{DynamicResource MahApps.Brushes.Accent}" Style="{DynamicResource MahApps.Styles.Button.Circle}" >
                <iconPacks:PackIconModern Kind="{Binding Path=Icon}"></iconPacks:PackIconModern>
            </Button>
            <TextBlock x:Name="tbValue" Text="{Binding Path=StatValue}" VerticalAlignment="Center" Foreground="{StaticResource MahApps.Brushes.Text}"></TextBlock>
        </StackPanel>
    </Border>
</UserControl>
