<local:PageContent x:Class="Memenim.Pages.SubmitPostPage"
                   d:DataContext="{d:DesignInstance local:SubmitPostPage}"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                   xmlns:widgets="clr-namespace:Memenim.Widgets"
                   xmlns:local="clr-namespace:Memenim.Pages"
                   mc:Ignorable="d"
                   d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{DynamicResource ResourceKey=SubmitPostTitle}" Style="{DynamicResource Header1}" Margin="16 5"/>
        <controls:MetroAnimatedTabControl Grid.Row="1" Margin="16 5" controls:TabControlHelper.Underlined="TabItems">
            <TabItem Header="{DynamicResource ResourceKey=EditTitle}">
                <ScrollViewer  VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>
                        <TextBox controls:TextBoxHelper.Watermark="{DynamicResource ResourceKey=PostContent}"
                                 MinHeight="200" Margin="0 5" TextWrapping="Wrap" AcceptsReturn="True"
                                 Text="{Binding Path=CurrentPostData.text, Mode=TwoWay}"/>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel>
                                <TextBlock Style="{DynamicResource Header2}" Text="{DynamicResource ResourceKey=ImageSourceTitle}" Margin="0 5"/>
                                <RadioButton Content="{DynamicResource ResourceKey=URLSelect}" Name="rbImageRaw" GroupName="ImageSource" IsChecked="True" Margin="0 5"/>
                                <RadioButton Content="{DynamicResource ResourceKey=TennorSelect}" Name="rbImageTennor" GroupName="ImageSource" Margin="0 5"/>
                                <RadioButton Content="{DynamicResource ResourceKey=GallerySelect}" Name="rbImageGallery" GroupName="ImageSource" Margin="0 5"/>
                            </StackPanel>
                            <Image x:Name="imgPreview" Height="100" Width="100" Margin="10" Stretch="Uniform"
                                   Source="{Binding Path=CurrentPostData.attachments[0].photo.photo_medium, Converter={StaticResource PostMediumImageSourceConverter}}"/>
                        </StackPanel>

                        <Button Click="SelectPhoto_Click" Content="{DynamicResource ResourceKey=SelectPhoto}" Style="{StaticResource MahApps.Styles.Button.Square}" Margin="0 5"/>
                        <Button Click="ClearPhoto_Click" Content="Clear photo" Style="{StaticResource MahApps.Styles.Button.Square}" Margin="0 5"/>
                        <!--<CheckBox IsChecked="{Binding Path=CurrentPostData.hidden, Mode=TwoWay}">Show post</CheckBox>-->
                        <CheckBox IsChecked="{Binding Path=CurrentPostData.open_comments, Mode=TwoWay}" Content="{DynamicResource ResourceKey=OpenComments}" Margin="0 5"/>
                        <CheckBox IsChecked="{Binding Path=CurrentPostData.adult, Mode=TwoWay}" Margin="0 5">18+</CheckBox>
                        <CheckBox IsChecked="{Binding Path=CurrentPostData.author_watch, Mode=TwoWay}" Content="{DynamicResource ResourceKey=PostAnon}" Margin="0 5"/>
                        <Button Click="Button_Click" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Content="{DynamicResource ResourceKey=SubmitPostButton}" Margin="0 5"/> 
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="{DynamicResource ResourceKey=PreviewTitle}">
                <widgets:PostWidget x:Name="wdgPostPreview" PreviewMode="True"
                                    CurrentPostData="{Binding Path=CurrentPostData, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:SubmitPostPage}}"/>
            </TabItem>
        </controls:MetroAnimatedTabControl>
    </Grid>
</local:PageContent>
