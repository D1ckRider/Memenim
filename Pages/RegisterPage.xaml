<local:PageContent x:Class="Memenim.Pages.RegisterPage"
                   d:DataContext="{d:DesignInstance viewModel:RegisterViewModel}"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                   xmlns:local="clr-namespace:Memenim.Pages"
                   xmlns:viewModel="clr-namespace:Memenim.Pages.ViewModel"
                   xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                   xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                   mc:Ignorable="d" 
                   Height="250" Width="250"
                   MinHeight="250" MinWidth="250">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="12" Width="12*"/>
            <ColumnDefinition MinWidth="101" Width="101*"/>
            <ColumnDefinition MinWidth="12" Width="12*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="50" Height="50*" />
            <RowDefinition MinHeight="100" Height="100*"/>
            <RowDefinition MinHeight="75" Height="75*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Name="lblErrorMessage" Foreground="Red"
               VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0 0 0 5"/>
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="12" Width="12*"/>
                    <ColumnDefinition MinWidth="101" Width="101*"/>
                    <ColumnDefinition MinWidth="12" Width="12*"/>
                </Grid.ColumnDefinitions>

                <iconPacks:PackIconModern Grid.Column="0" Kind="User"
                                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                <TextBox Name="txtLogin" Grid.Column="0" Grid.ColumnSpan="3" MinWidth="200" MinHeight="25"
                         controls:TextBoxHelper.Watermark="{DynamicResource ResourceKey=Login}"
                         controls:TextBoxHelper.SelectAllOnFocus="True" Margin="25 5 25 5"
                         Style="{DynamicResource MahApps.Styles.TextBox}"
                         VerticalAlignment="Bottom" HorizontalAlignment="Center"
                         VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                         TextChanged="txtLogin_TextChanged" KeyUp="txtLogin_KeyUp"/>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="12" Width="12*"/>
                    <ColumnDefinition MinWidth="101" Width="101*"/>
                    <ColumnDefinition MinWidth="12" Width="12*"/>
                </Grid.ColumnDefinitions>

                <iconPacks:PackIconModern Grid.Column="0" Kind="Key"
                                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                <PasswordBox Grid.Column="0" Grid.ColumnSpan="3" Name="txtPassword" MinWidth="200" MinHeight="25"
                             controls:TextBoxHelper.Watermark="{DynamicResource ResourceKey=Password}"
                             controls:TextBoxHelper.SelectAllOnFocus="True" Margin="25 0 25 2"
                             Style="{StaticResource MahApps.Styles.PasswordBox.Button.Revealed}"
                             VerticalAlignment="Top" HorizontalAlignment="Center"
                             VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                             PasswordChanged="txtPassword_PasswordChanged" KeyUp="txtPassword_KeyUp"/>
                <Button Grid.Column="2" Width="20" Height="20"
                        Margin="0 0 0 2" BorderThickness="0.5"
                        Style="{StaticResource MahApps.Styles.Button.Circle}"
                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                        Click="btnGeneratePassword_Click">
                    <iconPacks:PackIconBootstrapIcons Grid.Column="2" Width="12" Height="12" Kind="Dice6Fill"
                                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
            </Grid>
            <Button Name="btnGoToLogin" MinHeight="30" FontSize="10" Margin="40 2 40 2"
                    Style="{StaticResource MahApps.Styles.Button.Square}" Click="btnGoToLogin_Click">
                <TextBlock Text="{DynamicResource ResourceKey=GoToLogin}" MinHeight="10"
                           FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Center"
                           TextAlignment="Center" TextWrapping="Wrap"/>
            </Button>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                    VerticalAlignment="Bottom">
            <Button Name="btnRegister" MinHeight="20" FontSize="17"
                    Style="{DynamicResource MahApps.Styles.Button.Square.Accent}"
                    Margin="25 5 25 5" Click="btnRegister_Click">
                <TextBlock Text="{DynamicResource ResourceKey=SignUp}" MinHeight="10"
                           FontSize="17" VerticalAlignment="Center" HorizontalAlignment="Center"
                           TextAlignment="Center" TextWrapping="Wrap"/>
            </Button>
            <Button Name="btnAutoRegister" MinHeight="20" FontSize="17" Visibility="Collapsed"
                    Style="{DynamicResource MahApps.Styles.Button.Square.Accent}"
                    Margin="25 0 25 5" Click="btnAutoRegister_Click">
                <TextBlock Text="Auto register" MinHeight="10" FontSize="17"
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           TextAlignment="Center" TextWrapping="Wrap"/>
            </Button>
        </StackPanel>
    </Grid>
</local:PageContent>
