<local:PageContent x:Class="Memenim.Pages.RegisterPage"
                   d:DataContext="{d:DesignInstance local:RegisterPage}"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                   xmlns:local="clr-namespace:Memenim.Pages"
                   mc:Ignorable="d" 
                   d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <StackPanel Width="200" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Name="lblErrorMessage" Foreground="Red" HorizontalAlignment="Center"
                       Margin="5 5 5 5"/>
            <TextBox Name="txtLogin" Margin="0 0 0 5"
                     controls:TextBoxHelper.Watermark="{DynamicResource ResourceKey=Login}"
                     controls:TextBoxHelper.SelectAllOnFocus="True"
                     TextChanged="txtLogin_TextChanged" KeyUp="txtLogin_KeyUp"/>
            <PasswordBox Name="txtPassword"
                         controls:TextBoxHelper.Watermark="{DynamicResource ResourceKey=Password}"
                         controls:TextBoxHelper.SelectAllOnFocus="True" Margin="0 0 0 5"
                         Style="{StaticResource MahApps.Styles.PasswordBox.Button.Revealed}"
                         PasswordChanged="txtPassword_PasswordChanged" KeyUp="txtPassword_KeyUp"/>
            <Button Name="btnGoToLogin" Width="190" Height="30"
                    Content="{DynamicResource ResourceKey=GoToLogin}" Margin="5 5 5 5"
                    Style="{StaticResource MahApps.Styles.Button.Square}" Click="btnGoToLogin_Click"/>
            <Button Name="btnRegister" Width="190" MinHeight="30" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Margin="5 5 5 5"
                    Click="btnRegister_Click">
                <TextBlock Text="{DynamicResource ResourceKey=SignUp}" MinHeight="10"
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           TextAlignment="Center" TextWrapping="Wrap"/>
            </Button>
            <Button Name="btnAutoRegister" Width="190" Height="30" Visibility="Collapsed"
                    Style="{StaticResource MahApps.Styles.Button.MetroSquare.Accent}" Margin="5 5 5 5"
                    Click="btnAutoRegister_Click">Auto register</Button>
        </StackPanel>
    </Grid>
</local:PageContent>
