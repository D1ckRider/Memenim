<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
    <RootNamespace>Memenim</RootNamespace>
    <AssemblyName>MEMENIM</AssemblyName>
    <AssemblyVersion>0.8.0.0</AssemblyVersion>
    <FileVersion>0.8.0.0</FileVersion>
    <Product>MEMENIM</Product>
    <Version>0.8.0</Version>
    <Description>Custom client for https://anonym.network/ social network</Description>
    <Authors>D1ckWare, Dmitry Ponomarev</Authors>
    <Company>MEMENIM</Company>
    <Copyright>Copyright (c) MEMENIM, 2020</Copyright>
    <ApplicationIcon>Resources\ic_launcher.ico</ApplicationIcon>
    <StartupObject>Memenim.App</StartupObject>
  </PropertyGroup>

  <PropertyGroup>
    <NoWarn>$(NoWarn);CS0067;SS003;SS004;U2U1009</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MahApps.Metro" Version="2.3.3" />
    <PackageReference Include="MahApps.Metro.IconPacks" Version="4.8.0" />
    <PackageReference Include="Memenim.Core" Version="0.3.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="NLog" Version="4.7.5" />
    <PackageReference Include="RIS" Version="3.4.3" />
    <PackageReference Include="RIS.Collections" Version="4.5.91" />
    <PackageReference Include="RIS.Graphics" Version="2.4.1" />
    <PackageReference Include="RIS.Settings" Version="1.2.0" />
    <PackageReference Include="RIS.Text" Version="3.0.52" />
    <PackageReference Include="TenorClient" Version="1.0.3" />
    <PackageReference Include="WpfAnimatedGif" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ApplicationDefinition Remove="App.xaml" />
  </ItemGroup>

  <ItemGroup>
    <Page Include="App.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

  <ItemGroup>
    <Page Remove="Localization\MainWindow.en-US.xaml" />
    <Page Remove="Localization\MainWindow.ja-JP.xaml" />
    <Page Remove="Localization\MainWindow.ru-RU.xaml" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Resources\placeholder_avatar.jpg" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Localization\MainWindow.en-US.xaml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Localization\MainWindow.ja-JP.xaml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Localization\MainWindow.ru-RU.xaml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\placeholder_avatar.jpg" />
  </ItemGroup>

  <ItemGroup>
    <Page Update="TabLayouts\NavigationBar\NavBarNone.xaml">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Page>
    <Page Update="TabLayouts\NavigationBar\NavBarDefault.xaml">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Page>
    <Page Update="TabLayouts\NavigationBar\NavBarBackOnly.xaml">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Page>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>