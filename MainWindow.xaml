<controls:MetroWindow x:Class="Memenim.MainWindow"
                 d:DataContext="{d:DesignInstance local:MainWindow}"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:Memenim"
                 xmlns:indicatorsLoading="clr-namespace:RIS.Graphics.WPF.Controls.Indicators.Loading;assembly=RIS.Graphics"
                 xmlns:dialogs="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
                 xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 mc:Ignorable="d"
                 ShowTitleBar="True"
                 ShowIconOnTitleBar="False"
                 WindowTitleBrush="{StaticResource MahApps.Brushes.Menu.Background}"
                 GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
                 dialogs:DialogParticipation.Register="{Binding}"
                 Title="MEMENIM Desktop"
                 MinHeight="450" MinWidth="800"
                 Height="450" Width="800"
                 Closed="MainWindow_Closed">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Localization/MainWindow.en-US.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <controls:MetroWindow.Flyouts>
        <controls:FlyoutsControl>
            <controls:Flyout x:Name="settingsFlyout"
                             Header="Settings"
                             Position="Right"
                             Theme="Adapt"
                             MinWidth="300">
                <Grid Margin="10">
                    <StackPanel Grid.Row="1">
                        <PasswordBox Name="txtNewPassword" Margin="0 5"
                                    controls:TextBoxHelper.Watermark="{DynamicResource ResourceKey=NewPassword}"
                                    controls:TextBoxHelper.SelectAllOnFocus="True"
                                    Style="{StaticResource MahApps.Styles.PasswordBox.Button.Revealed}"/>
                        <Button Content="{DynamicResource ResourceKey=ChangePassword}" Margin="0 5"
                                Style="{StaticResource MahApps.Styles.Button.Square.Accent}"/>
                        <controls:SplitButton Name="slcLanguage" ItemsSource="{Binding Locales, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:MainWindow}}"
                                  DisplayMemberPath="Value" SelectionChanged="slcLanguage_SelectionChanged" Margin="0 5">
                            <controls:SplitButton.Icon>
                                <iconPacks:PackIconModern Margin="6" Kind="Globe"/>
                            </controls:SplitButton.Icon>
                        </controls:SplitButton>
                        <Button Click="btnSignOut_Click" Content="{DynamicResource ResourceKey=SignOut}" Margin="0 5"
                            Style="{StaticResource MahApps.Styles.Button.Square.Accent}"/>
                    </StackPanel>
                </Grid>
            </controls:Flyout>
        </controls:FlyoutsControl>
    </controls:MetroWindow.Flyouts>
    <Grid x:Name="RootLayout">
        <Grid Grid.Row="0" Grid.Column="0" x:Name="loadingGrid"
              Visibility="Collapsed" ZIndex="2147483647"
              Background="{DynamicResource MahApps.Brushes.Window.Background}">
            <indicatorsLoading:LoadingIndicator x:Name="loadingIndicator" Mode="Arcs"
                                                SpeedRatio="2" IsActive="False" Visibility="Visible"/>
        </Grid>
    </Grid>
</controls:MetroWindow>
