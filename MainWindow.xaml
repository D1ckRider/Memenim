<mah:MetroWindow x:Class="Memenim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:Memenim"
        mc:Ignorable="d"
        ShowTitleBar="True"
        ShowIconOnTitleBar="False"
        WindowTitleBrush="{StaticResource MahApps.Brushes.Menu.Background}"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        Dialog:DialogParticipation.Register="{Binding}"
        Title="MEMENIM Desktop"
        MinHeight="700" MinWidth="800"
        Height="700" Width="800"
        Closed="MainWindow_Closed">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Localization/MainWindow.en-US.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid x:Name="rootLayout">
        <mah:MetroContentControl x:Name="contentArea"/>
    </Grid>
</mah:MetroWindow>
